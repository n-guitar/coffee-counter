<%= render "shared/header" %>
<br><br><br><br><br>
<h1>ユーザー登録</h1>

<%= form_for(@user) do |f|  %>

  <div class="form-inline">
  <div class="form-group">
    <%= f.label :name, "名前" ,:class => "control-label" %>
    <%= f.text_field :name, autofocus: true, :class =>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :mail ,:class => "control-label" %>
    <%= f.email_field :mail, autofocus: true, :class =>"form-control" %>
  </div>

<%= f.submit "送信" , :class => "form-control btn-default" %>
<% end %>
</div>
</div>
<br>


<table class="table table-striped table-hover">
    <theader>
        <tr>
            <th>表示名</th>
            <th>メールアドレス</th>
            <th>アクション</th>
        </tr>
    </theader>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.mail %></td>
            <% if user.disabled %>
                <td><%= link_to "表示化", user_path(user.id, disabled: "false"), method: :patch, :confirm => '表示にしますか？', :class => "btn btn-success" %></td>
            <% else %>
                <td><%= link_to "非表示化", user_path(user.id, disabled: "true"), method: :patch, :confirm => '非表示にしますか？', :class => "btn btn-warning" %></td>
            <% end %>
            <td><%= link_to "削除", user_path(user.id), method: :delete, :confirm => '削除しますか？', :class => "btn btn-danger" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
