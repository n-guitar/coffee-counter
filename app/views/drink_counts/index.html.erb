<%= render "header" %>

<h1>ダッシュボード</h1>
<h2>今日の日付は<%= Date.today %>です</h2>
<%= form_for(@drinkcount) do |f| %>
<div class="col-sm-2">
<ul class="list-group" data-toggle="buttons">
  <% @drinks.each do |drink| %>
  <li class="list-group-item"><div data-toggle="buttons"><%= f.radio_button(:drink_id, drink.id, {:class => "btn"}) %><%= drink.menu %></div></li>
  <% end %>
</ul>
</div>

<div class="col-sm-10">
<ul class="list-group">
<% @users.each do |user| %>
<li class="list-group-item"><%= f.submit(user.name, :id => user.id, :user_id => user.id, :class => "btn btn-lg btn-info") %><div class=""><%= @drinkcounts.where(:user_id => user.id).count %></div</li>
<% end %>
</ul>
<% end %>
</div>
